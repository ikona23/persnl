<!DOCTYPE html>
<html>

<head>
  <title>Persnl</title>
  <%= stylesheet_link_tag 'application', media:'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href="sticky-footer.css" rel="stylesheet">
  <link href='http://fonts.googleapis.com/css?family=Lato:400,700' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>

<body>

<header class = "fixed">
  <div class="navbar navbar-fixed-top navbar-inverse">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="">Peter Kona</a>
        <div class="nav-collapse">
          <ul class="nav">
            <li class="divider"></li>
            <li class=""<%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path %></li>
            <li class=""><%= link_to "Porfolio", gallery_about__path %></li>
            <li class=""><%= link_to "About me", about_about_path %></li>
          </ul>
        </div><!-- /.nav-collapse -->
      </div><!-- /.container -->
    </div><!-- /.navbar-inner -->
  </div><!-- /.navbar -->
</header>

<div class="container">
<%= yield %>
</div>


<div class="footer">
  <div class="inside">
    <a href="http://peterkona.com">Peter Kona</a>
  </div>
</div>



  <script type='text/javascript' src="/assets/application.js"></script>
  <script src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js'></script>
  <script src="/assets/bootstrap.min.js"></script>
  <script type='text/javascript' src="/assets/bootbox.min.js"></script>
  <script type='text/javascript' src="/assets/jquery.quicksand.js"></script>
  <script type='text/javascript' src="/assets/jquery.js"></script>
  <script type='text/javascript' src="/assets/init.js" ></script>

</body>
</html>
